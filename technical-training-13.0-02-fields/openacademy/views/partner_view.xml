<odoo>
    
        <record model="ir.ui.view" id="partner_form_view">
        <field name="name">partner.form</field>
        <field name="model">openacademy.partner</field>
        <field name="arch" type="xml">
            <form string="Partner Form">
                <sheet>
                    <group>
                        <group >
                            <field name="x_user"/>
                            <field name="phone"/>
                            <field name="adress"/>
                            <field name="city"/>
                        </group>               
                        <group>
                            <field name="instructor"/>
                            
                        </group>
                    </group>
                    <notebook class="oe_read_only">
                        <page string="Session">
                            <field name="session_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partner_tree_view" >
        <field name="name">partner.tree</field>
        <field name="model">openacademy.partner</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="Partner Tree">
                <field name="x_name"/>
                <field name="instructor"/>
                <field name="session_ids"/>
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="partner_search_view">
        <field name="name">partner.search</field>
        <field name="model">openacademy.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="x_user"/>
                <field name="instructor"  />
                 <filter name="instructor" string="User type"
                            domain="[('instructor', '=', 'Instructor')]"/>
                    <group string="Group By">
                        <filter name="by_instructor" string="User type"
                                context="{'group_by': 'instructor'}"/>
                    </group>
            </search>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="partner_list_action">
        <field name="name">Partner</field>
        <field name="res_model">openacademy.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_partner': 1}"/>
    </record>
            
</odoo>