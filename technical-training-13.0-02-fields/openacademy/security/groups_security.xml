<!-- Groups of security -->
<odoo>
    <data>
    <record model="ir.module.category" id="module_management">
      <field name="name">User type</field>
      <field name="description">User access level for this module</field>
      <field name="sequence">3</field>
    </record>    
    
   <record id="group_instructor" model="res.groups">
     <field name="name">Instructor</field>
     <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
     <field name="category_id" ref="openacademy.module_management"/>
    </record>
    
    <record id="group_teacher" model="res.groups">
     <field name="name">Teacher</field>
     <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
     <field name="category_id" ref="openacademy.module_management"/>
    </record>
    
    <record id="group_student" model="res.groups">
     <field name="name">Student</field>
     <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
     <field name="category_id" ref="openacademy.module_management"/>
    </record>
    </data>
</odoo>